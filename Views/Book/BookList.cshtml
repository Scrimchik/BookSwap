@model BookListViewModel
@{
    ViewBag.Title = Model.GenreName;
}

<div class="genre-name">@Model.GenreName</div>
<div class="book-list">
    @foreach (var b in Model.Books)
    {
        <div class="book-list-item">
            <a asp-action="Book" asp-controller="Book" asp-route-bookId="@b.Id" asp-route-bookName="@b.LatinName" asp-route-genreName="@Model.GenreLatinName">
                <div class="book-list-item__img"><img src="@b.PhotoWay" alt=""></div>
                <div class="book-list-item__name">@b.Name</div>
            </a>
        </div>
    }
</div>
<div class="page-block">
    @for (int i = 1; i <= Model.PageInfo.TotalPages; i++)
        {
            if (i == Model.PageInfo.CurrentPage)
            {
                <a asp-action="BookList" asp-controller="Book" asp-route-page="@i"><div class="page-block__item page-block__item_selected">@i</div></a>
            }
            else
            {
                <a asp-action="BookList" asp-controller="Book" asp-route-page="@i"><div class="page-block__item">@i</div></a>
            }
        }
</div>